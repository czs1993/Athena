@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Form.cshtml";
}

<script>
    var keyValue = $.request("keyValue");
    $(function () {
        initControl();
        $.ajax({
            url: "/WorkflowManage/Workflownode/GetFormJson",
            data: { keyValue: keyValue },
            dataType: "json",
            async: false,
            success: function (data) {
                $("#form1").formSerialize(data);
                $("#form1").find('.form-control,select,input').attr('readonly', 'readonly');
                $("#form1").find('div.ckbox label').attr('for', '');
            }
        });
    });
    function initControl() {
        $("#wfid").bindSelect({
            url: "/WorkflowManage/Workflownode/GetSelectJson",
        });
    }
</script>
<form id="form1">
    <div style="margin-top: 10px; margin-left: 10px; margin-right: 10px;">
        <ul class="nav nav-tabs">
            <li class="active"><a href="#">基本信息</a></li>
        </ul>
        <div style="padding-top: 20px; margin-right: 30px;">
            <table class="form">
                <tr>
                    <th class="formTitle">工作流名称</th>
                    <td class="formValue">
                        <select id="wfid" name="wfid" class="form-control">
                        </select>
                    </td>
                    <th class="formTitle">节点名称</th>
                    <td class="formValue">
                        @*<label id="wfnodename" name="wfnodename" type="text" class="form-control" placeholder="请输入节点名称" />*@
                        <input id="wfnodename" name="wfnodename" type="text" class="form-control" placeholder="请输入节点名称" />
                    </td>
                </tr>
                <tr>
                    <th class="formTitle">节点描述</th>
                    <td class="formValue">
                        @*<label id="wfnodememo" name="wfnodememo" type="text" class="form-control" placeholder="请输入节点描述" />*@
                        <input id="wfnodememo" name="wfnodememo" type="text" class="form-control" placeholder="请输入节点描述" />
                    </td>
                    <th class="formTitle">节点标识</th>
                    <td class="formValue">
                        <input id="wfnodeflag" name="wfnodeflag" type="text" class="form-control" placeholder="请输入节点标识" />
                    </td>
                </tr>
                <tr>
                    <th class="formTitle"> 节点开始时间</th>
                    <td class="formValue">
                        <input id="wfnodebegintime" name="wfnodebegintime" type="text" class="form-control" placeholder="请输入节点开始时间" />
                    </td>
                    <th class="formTitle">节点结束时间</th>
                    <td class="formValue">
                        <input id="wfnodeendtime" name="wfnodeendtime" type="text" class="form-control"  placeholder="请输入节点结束时间"/>
                    </td>
                </tr>
                <tr>
                    <th class="formTitle">节点状态</th>
                    <td class="formValue">
                        <input id="wfnodestatus" name="wfnodestatus" type="text" class="form-control"  placeholder="请输入节点状态"/>
                    </td>
                    <th class="formTitle">锁定状态</th>
                    <td class="formValue">
                        <input id="wfnodelock" name="wfnodelock" type="text" class="form-control" placeholder="请输入锁定状态" />
                    </td>
                </tr>
            </table>
        </div>
    </div>
</form>
