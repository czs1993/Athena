@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Form.cshtml";
}
<script>
    var keyValue = $.request("keyValue");
    $(function () {
        $.ajax({
            url: "/SystemManage/Propertymapping/GetFormJson",
            data: { keyValue: keyValue },
            dataType: "json",
            async: false,
            success: function (data) {
                $("#form1").formSerialize(data);
                $("#form1").find('.form-control,select,input').attr('readonly', 'readonly');
                $("#form1").find('div.ckbox label').attr('for', '');
            }
        });
    })
</script>
<form id="form1">
    <div style="margin-top: 10px; margin-left: 10px; margin-right: 10px;">
        <ul class="nav nav-tabs">
            <li class="active"><a href="#">基本信息</a></li>
        </ul>
        <div style="padding-top: 20px; margin-right: 30px;">
            <table class="form">
                <tr>
                    <th class="formTitle">属性名称</th>
                    <td class="formValue">
                        <input id="propertyName" name="propertyName" type="text" class="form-control" />
                    </td>
                </tr>
                <tr>
                    <th class="formTitle">属性值</th>
                    <td class="formValue">
                        <input id="propertyValue" name="propertyValue" type="text" class="form-control" />
                    </td>
                </tr>
                <tr>
                    <th class="formTitle">属性含义</th>
                    <td class="formValue">
                        <input id="propertyMeaning" name="propertyMeaning" type="text" class="form-control" />
                    </td>
                </tr>
                <tr>
                    <th class="formTitle">标记</th>
                    <td class="formValue">
                        <input id="remark" name="remark" type="text" class="form-control" />
                    </td>
                </tr>
                <tr>
                    <th class="formTitle">父节点</th>
                    <td class="formValue">
                        <input id="parentId" name="parentId" type="text" class="form-control" />
                    </td>
                </tr>
            </table>
        </div>
    </div>
</form>

